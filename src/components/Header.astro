---
const navItems = [
  { label: 'GitHub', href: 'https://github.com/NOVA-ALLRounder/main', badge: '[100K]', external: true },
  { label: '문서', href: '/docs' },
  { label: '엔터프라이즈', href: '/solutions' },
  { label: 'Zen', href: '/product' },
];

const repo = process.env.GITHUB_REPOSITORY?.split('/')[1] ?? '';
const isUserSiteRepo = repo.endsWith('.github.io');
const basePath = process.env.GITHUB_ACTIONS === 'true'
  ? (isUserSiteRepo ? '/' : `/${repo}/`)
  : '/';
const currentPath = Astro.url.pathname;

const withBase = (url: string) => {
  if (
    url.startsWith('http://') ||
    url.startsWith('https://') ||
    url.startsWith('mailto:') ||
    url.startsWith('tel:') ||
    url.startsWith('#')
  ) {
    return url;
  }
  if (!url.startsWith('/')) return url;

  const clean = url.replace(/^\/+/, '');
  return clean ? `${basePath}${clean}` : basePath;
};

const stripTrailingSlash = (path: string) => (path.length > 1 && path.endsWith('/') ? path.slice(0, -1) : path);
const appPath = (() => {
  if (basePath !== '/' && currentPath.startsWith(basePath)) {
    return `/${currentPath.slice(basePath.length)}`;
  }
  return currentPath;
})();
const normalizedCurrentPath = stripTrailingSlash(appPath);
const isActive = (href: string) => {
  if (href.startsWith('http://') || href.startsWith('https://')) return false;
  const normalizedHref = stripTrailingSlash(href);
  return normalizedCurrentPath === normalizedHref || (normalizedHref !== '/' && normalizedCurrentPath.startsWith(normalizedHref));
};
---

<header
  class:list={[
    'fixed top-0 left-0 right-0 z-50 border-b backdrop-blur-sm',
    'bg-[#f2f2f2]/95 border-black/10',
  ]}
  role="banner"
>
  <nav
    class="max-w-[1360px] mx-auto px-6 h-24 flex items-center justify-between"
    aria-label="Main Navigation"
  >
    <a
      href={withBase('/')}
      class="flex items-center leading-none tracking-[-0.045em] transition-opacity hover:opacity-80"
    >
      <span class="font-black text-4xl md:text-5xl text-neutral-500">NO</span>
      <span class="font-black text-4xl md:text-5xl text-neutral-900">VA</span>
    </a>

    <ul class="hidden lg:flex items-center gap-14" role="list">
      {navItems.map((item) => (
        <li>
          <a
            href={withBase(item.href)}
            target={item.external ? '_blank' : undefined}
            rel={item.external ? 'noopener noreferrer' : undefined}
            class:list={[
              'py-2 text-[2rem] leading-none transition-colors',
              isActive(item.href)
                ? 'text-neutral-900'
                : 'text-neutral-900 hover:text-neutral-700',
            ]}
            aria-current={isActive(item.href) ? 'page' : undefined}
          >
            {item.label}
            {item.badge && <span class="ml-2 text-neutral-500">{item.badge}</span>}
          </a>
        </li>
      ))}
    </ul>

    <div class="hidden lg:flex items-center gap-3">
      <a
        href={withBase('/docs/getting-started')}
        class:list={[
          'inline-flex items-center gap-3 px-6 py-3 rounded-lg bg-[#1f1d1f] text-white text-[2rem] leading-none hover:bg-[#2a272a] transition-colors',
        ]}
      >
        <svg class="h-7 w-7" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v11m0 0l4-4m-4 4l-4-4M4 20h16" />
        </svg>
        <span>무료</span>
      </a>
    </div>

    <button
      id="mobile-menu-toggle"
      class:list={[
        'lg:hidden inline-flex items-center justify-center w-10 h-10 rounded-md transition-colors text-neutral-900 hover:bg-black/5',
      ]}
      aria-expanded="false"
      aria-controls="mobile-menu"
      aria-label="Open Menu"
    >
      <svg id="menu-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <svg id="close-icon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </nav>

  <div
    id="mobile-menu"
    class:list={[
      'lg:hidden hidden border-t backdrop-blur bg-[#f2f2f2]/98 border-black/10',
    ]}
    role="navigation"
    aria-label="Mobile Navigation"
  >
    <ul class="px-6 py-4 space-y-1" role="list">
      {navItems.map((item) => (
        <li>
          <a
            href={withBase(item.href)}
            class:list={[
              'block px-4 py-3 rounded-md text-base font-medium transition-colors',
              isActive(item.href)
                ? 'text-neutral-900 bg-black/5'
                : 'text-neutral-700 hover:text-neutral-900 hover:bg-black/5',
            ]}
            aria-current={isActive(item.href) ? 'page' : undefined}
            target={item.external ? '_blank' : undefined}
            rel={item.external ? 'noopener noreferrer' : undefined}
          >
            {item.label}
            {item.badge && <span class="ml-2 text-neutral-500">{item.badge}</span>}
          </a>
        </li>
      ))}
    </ul>
    <div class="px-6 pb-4 pt-2 border-t border-black/10 flex flex-col gap-2">
      <a
        href={withBase('/docs/getting-started')}
        class:list={[
          'block px-4 py-3 text-center text-base font-medium rounded-md transition-colors',
          'bg-[#1f1d1f] text-white hover:bg-[#2a272a]',
        ]}
      >
        무료
      </a>
    </div>
  </div>
</header>

<div class="h-24" aria-hidden="true"></div>

<script>
  const toggle = document.getElementById('mobile-menu-toggle');
  const menu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  toggle?.addEventListener('click', () => {
    const isOpen = menu?.classList.contains('hidden') === false;
    menu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
    toggle.setAttribute('aria-expanded', String(!isOpen));
    toggle.setAttribute('aria-label', isOpen ? 'Open Menu' : 'Close Menu');
  });
</script>
